WindowManager:
    MainWindow:
    SecondWindow:
    ThirdWindow:
    FourthWindow:
    FifthWindow:

<MainWindow>:
    name: "main"

    BoxLayout:
        orientation: 'vertical'
        cols:2

        canvas.before:
            Color:
                rgba: .12, .12, .12, .85
            Rectangle:
                pos: self.pos
                size: self.size

        Button:
            canvas.before:
                Color:
                    rgba: .5, .5, .5, 1
                Line:
                    width: 5
                    rectangle: self.x, self.y, self.width, self.height

            markup: True
            text: "[color=32a4ce]Energy Expenditure[/color]"
            font_size: 30
            size_hint: 0.4, 0.4
            pos_hint: {'center_x':.5, 'center_y': .9}

            on_release:
                app.root.current = "second"
                root.manager.transition.direction = "left"

        Button:
            canvas.before:
                Color:
                    rgba: .5, .5, .5, 1
                Line:
                    width: 5
                    rectangle: self.x, self.y, self.width, self.height

            markup: True
            text: "[color=32a4ce]Bodyfat Percentage[/color]"
            font_size: 30
            size_hint: 0.4, 0.4
            pos_hint: {'center_x':.5, 'center_y': .8}

            on_release:
                app.root.current = "third"
                root.manager.transition.direction = "left"

        Button:
            canvas.before:
                Color:
                    rgba: .5, .5, .5, 1
                Line:
                    width: 5
                    rectangle: self.x, self.y, self.width, self.height

            markup: True
            text: "[color=32a4ce]Muscular Potential[/color]"
            font_size: 30
            size_hint: 0.4, 0.4
            pos_hint: {'center_x':.5, 'center_y': .7}
            on_release:

                app.root.current = "fourth"
                root.manager.transition.direction = "left"

        Button:
            canvas.before:
                Color:
                    rgba: .5, .5, .5, 1
                Line:
                    width: 5
                    rectangle: self.x, self.y, self.width, self.height

            markup: True
            text: "[color=32a4ce]More Calculators[/color]"
            font_size: 30
            size_hint: 0.4, 0.4
            pos_hint: {'center_x':.5, 'center_y': .6}

            on_release:
                app.root.current = "fifth"
                root.manager.transition.direction = "left"

<SecondWindow>:
    name: "second"
    FloatLayout:
        canvas.before:
            Color:
                rgba: .12, .12, .12, .85
            Rectangle:
                pos: self.pos
                size: self.size
        Button:
            text: "Back"
            size_hint: 0.2, 0.08
            pos_hint: {'center_x':.09, 'center_y': .97}
            on_release:
                app.root.current = "main"
                root.manager.transition.direction = "right"
        Label:
            text: "Total Daily Energy Expenditure"
            font_size: 20
            pos_hint: {'center_x':.5, 'center_y': .96}
        Label:
            text: root.summary()
            font_size: 20
            pos_hint: {'center_x':.5, 'center_y': .80}
        Label:
            text: "Gender"
            font_size: 20
            pos_hint: {'center_x':.3, 'center_y': .65}
        Label:
            text: "Age"
            font_size: 20
            pos_hint: {'center_x':.3, 'center_y': .58}
        Label:
            text: "Weight"
            font_size: 20
            pos_hint: {'center_x':.3, 'center_y': .51}
        Label:
            text: "Height"
            font_size: 20
            pos_hint: {'center_x':.3, 'center_y': .44}
        Label:
            text: "Activity"
            font_size: 20
            pos_hint: {'center_x':.3, 'center_y': .37}

        CheckBox:
            # Gender
            size_hint: 0.2, 0.05
            pos_hint: {'center_x':.5, 'center_y': .65}
            multiline: False
        TextInput:
            # Age
            size_hint: 0.2, 0.05
            pos_hint: {'center_x':.5, 'center_y': .58}
            multiline: False
        TextInput:
            hint_text: "kgs"
            size_hint: 0.2, 0.05
            pos_hint: {'center_x':.5, 'center_y': .51}
            multiline: False
        TextInput:
            hint_text: "cm"
            size_hint: 0.2, 0.05
            pos_hint: {'center_x':.5, 'center_y': .44}
            multiline: False
        TextInput:
            hint_text: "Sedentary (office job)"
            size_hint: 0.2, 0.05
            pos_hint: {'center_x':.5, 'center_y': .37}
            multiline: False

        Button:
            text: "Calculate"
            size_hint: .3, .1
            pos_hint: {'center_x':.5, 'center_y': .04}



<ThirdWindow>:
    name: "third"

    Button:
        text: "Back"
        size_hint: 0.2, 0.08
        pos_hint: {"top": 1, "left": 1}
        on_release:
            app.root.current = "main"
            root.manager.transition.direction = "right"

<FourthWindow>:
    name: "fourth"

    Button:
        text: "Back"
        size_hint: 0.2, 0.08
        pos_hint: {'center_x':.09, 'center_y': .97}
        on_release:
            app.root.current = "main"
            root.manager.transition.direction = "right"

<FifthWindow>:
    name: "fifth"
    FloatLayout:
        Button:
            text: "Back"
            size_hint: 0.2, 0.08
            pos_hint: {'center_x':.09, 'center_y': .97}
            on_release:
                app.root.current = "main"
                root.manager.transition.direction = "right"
        Label:
            text: root.gen()


